@model ProjetoGestao.Models.Projeto

@{
    ViewData["Title"] = "Editar Projeto";
}

<h4 class="mt-5">Editar Projeto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProjetoId" />
            <div class="form-group">
                <label asp-for="NomeProjeto" class="control-label"></label>
                <input asp-for="NomeProjeto" class="form-control" />
                <span asp-validation-for="NomeProjeto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DescricaoProjeto" class="control-label"></label>
                <input asp-for="DescricaoProjeto" class="form-control" />
                <span asp-validation-for="DescricaoProjeto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataPrevistaInicio" class="control-label"></label>
                <input asp-for="DataPrevistaInicio" class="form-control" />
                <span asp-validation-for="DataPrevistaInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataEfetivaInicio" class="control-label"></label>
                <input asp-for="DataEfetivaInicio" class="form-control" />
                <span asp-validation-for="DataEfetivaInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataEfetivaFim" class="control-label"></label>
                <input asp-for="DataEfetivaFim" class="form-control" />
                <span asp-validation-for="DataEfetivaFim" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataPrevistaFim" class="control-label"></label>
                <input asp-for="DataPrevistaFim" class="form-control" />
                <span asp-validation-for="DataPrevistaFim" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GestorId" class="control-label"></label>
                <select asp-for="GestorId" class="form-control" asp-items="ViewBag.GestorId"></select>
                <span asp-validation-for="GestorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClienteId" class="control-label"></label>
                <select asp-for="ClienteId" class="form-control" asp-items="ViewBag.ClienteId"></select>
                <span asp-validation-for="ClienteId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />|
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
