@model IEnumerable<ProjetoGestao.Models.Relatorio>

@{
    ViewData["Title"] = "Relatorios";
}

<h2 class="mt-5">Relatorios</h2>

<p>
    <a asp-action="Create">Criar Relatorio</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeRelatorio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataEfetivaInicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Projeto)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeRelatorio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataEfetivaInicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Projeto.DataEfetivaFim)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RelatorioId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.RelatorioId">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.RelatorioId">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
