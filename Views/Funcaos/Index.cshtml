@model IEnumerable<ProjetoGestao.Models.Funcao>

@{
    ViewData["Title"] = "Funcoes";
}

<h2 class="mt-5">Funcoes</h2>

<p>
    <a asp-action="Create">Criar Funcao</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeFuncao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeFuncao)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.FuncaoId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.FuncaoId">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.FuncaoId">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
